<% title "Tarefas" %>

<table>
  <tr>
    <th>Descricao</th>
    <th>Data Finalizacao</th>
    <th>Colaborador</th>
    <th>Projeto</th>
  </tr>
  <% for tarefa in @tarefas %>
    <tr>
      <td><%= tarefa.descricao %></td>
      <td><%= tarefa.data_finalizacao %></td>
      <td><%= tarefa.responsavel ? tarefa.responsavel.nome : '-- Sem ResponsÃ¡vel --' %></td>
      <td><%= tarefa.projeto.nome %></td>
      <td><%= link_to "Show", projeto_tarefa_path(tarefa.projeto.id, tarefa.id) %></td>
      <td><%= link_to "Edit", edit_projeto_tarefa_path(tarefa.projeto.id, tarefa.id) %></td>
      <td><%= link_to "Destroy", projeto_tarefa_path(tarefa.projeto.id, tarefa.id), :confirm => 'Are you sure?', :method => :delete %></td> 
    </tr>
  <% end %>
</table>

