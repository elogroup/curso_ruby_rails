<% title "Tarefas" %>

<table>
  <tr>
    <th>Descricao</th>
    <th>Data Finalizacao</th>
    <th>Colaborador</th>
    <th>Projeto</th>
  </tr>
  <% for tarefa in @tarefas %>
    <tr>
      <td><%= tarefa.descricao %></td>
      <td><%= tarefa.data_finalizacao %></td>
      <td><%= tarefa.colaborador_id %></td>
      <td><%= tarefa.projeto_id %></td>
      <td><%= link_to "Show", tarefa %></td>
      <td><%= link_to "Edit", edit_tarefa_path(tarefa) %></td>
      <td><%= link_to "Destroy", tarefa, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Tarefa", new_tarefa_path %></p>
