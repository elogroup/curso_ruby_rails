	<%= link_to 'Nova Tarefa', '#', :id => 'cria_nova_tarefa' %>
	<div style="display:none">
		<%=render :partial => 'tarefas/form', :locals => {:tarefa => Tarefa.new(:projeto_id => @projeto.id)}%>
