<h2> Lista de Tarefas </h2>

<%= link_to 'Nova Tarefa', new_projeto_tarefa_path(params[:projeto_id]) %>
<br/>
<br/>
<div id="resutlado">
	<table>
		<tr>
			<th>Descricao</th>
			<th>Responsavel</th>
			<th>Projeto</th>
			<th></th>
			<th></th>
		</tr>
		<% @tarefas.each do |tarefa| %>
			<tr>
				<td><%= tarefa.descricao %></td>
				<td><%= tarefa.responsavel %></td>
				<td><%= nome_projeto tarefa.projeto %></td>
				<td><%= link_to 'Alterar', edit_projeto_tarefa_path(params[:projeto_id], tarefa) %></td>
				<td><%= link_to 'Remover', projeto_tarefa_path(params[:projeto_id],tarefa, :method => :delete) %></td>
			</tr>
		<%end%>		
	</table>	
</div>
