	</div>
</div>
<br/>
<br/>

<div id="resutlado">
	<%= render :partial => 'lista_tarefa', :object => @tarefas %>
</div>

<%=content_for :js do%>
	<%= javascript_include_tag "nova_tarefa" %>
<%end%>