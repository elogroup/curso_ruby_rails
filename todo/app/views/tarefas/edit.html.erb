<h3> Altera Tarefa: <%=@tarefa.id%> </h3>

<div class="form-error">
	<% @tarefa.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
</div>


<%= form_for @tarefa, :url => tarefas_update_path(@tarefa) do |f| %>
	<p>Projeto: <%= f.text_field :projeto %></p>
	<p>Responsavel: <%= f.text_field :responsavel %></p>
	Descricao:
	<p><%= f.text_area :descricao %></p>
	<%= f.submit %>
<% end %>
